present_time=$1
grace_time=$2
count_down=$3
beginning=$4
total_time=$(($present_time+$grace_time))
say $beginning
for current in $( seq $total_time 0 )
do
    clear
    echo $beginning
    toilet -f bigmono9 --gay --termwidth $current
    sleep 1
    if [ "$current" -eq "$grace_time" ]
    then
	afplay smb_warning.wav
    fi
    if [ "$current" -lt "$count_down" ]
    then
	afplay smb_coin.wav
    fi
done
clear
afplay smb_mariodie.wav
toilet -f bigmono9 --gay --termwidth Time Over!
say "Please Clap."
sleep 5

